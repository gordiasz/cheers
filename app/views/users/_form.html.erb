<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label 'Hasło' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label 'Powtórz hasło' %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Zarejestruj' %>
  </p>
  <p>
    <%= f.label :roles %><br />
    <% for role in User::ROLES %>
      <%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
      <%=h role.humanize %><br />
    <% end %>
    <%= hidden_field_tag "user[roles][]", "" %>
  </p>
  <p>
    Zmień użytkownika: <%= f.collection_select :user_id, User.all, :id, :login %>
  </p>
  <p><%= f.submit "Submit" %></p>

<% end %>
