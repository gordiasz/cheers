<h1>Zmiana danych użytkownika</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label 'Nowe hasło' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label 'Powtórz hasło' %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Zmień' %>
  </p>
<% end %>
